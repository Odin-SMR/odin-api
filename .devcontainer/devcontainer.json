{
  "name": "odinapi dev (py3.11 + node16 + uv)",
  "dockerComposeFile": "compose.yaml",
  "service": "dev",
  "workspaceFolder": "/workspaces/odin-api",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-ossdata.vscode-postgresql",
        "mongodb.mongodb-vscode",
        "GitHub.copilot",
        "ms-python.debugpy",
        "redhat.vscode-yaml",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && sudo apt update && sudo apt install -y libgtk-3-bin libatk-bridge2.0-0 libgbm1 libxss1 libasound2",
  "remoteEnv": {
    "FLASK_DEBUG": "1",
    "FLASK_RUN_HOST": "0.0.0.0",
    "FLASK_RUN_PORT": "5000",
    "AWS_SDK_LOAD_CONFIG": "1"
  },
  "forwardPorts": [
    5000
  ],
  "portsAttributes": {
    "5000": {
      "label": "Flask"
    }
  },
  "mounts": [
    "source=${env:HOME}/.aws,target=/home/vscode/.aws,type=bind"
  ]
}
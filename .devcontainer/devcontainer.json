{
  "name": "odinapi dev",
  "dockerComposeFile": "compose.yaml",
  "service": "dev",
  "workspaceFolder": "/workspaces/odin-api",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {},
    "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
      "packages": "libgtk-3-bin,libatk-bridge2.0-0,libgbm1,libxss1,libnss3,libasound2t64"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-ossdata.vscode-postgresql",
        "mongodb.mongodb-vscode",
        "GitHub.copilot",
        "ms-python.debugpy",
        "redhat.vscode-yaml",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker",
        "github.vscode-pull-request-github",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "uv sync && npm install && npm run build",
  "remoteEnv": {
    "FLASK_DEBUG": "1",
    "FLASK_RUN_HOST": "0.0.0.0",
    "FLASK_RUN_PORT": "5000",
    "AWS_SDK_LOAD_CONFIG": "1"
  },
  "forwardPorts": [
    5000
  ],
  "portsAttributes": {
    "5000": {
      "label": "Flask"
    }
  },
  "mounts": [
    "source=${env:HOME}/.aws,target=/home/vscode/.aws,type=bind"
  ]
}